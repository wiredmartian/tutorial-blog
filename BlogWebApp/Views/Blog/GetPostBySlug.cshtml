@model BlogWebApp.Models.SinglePostViewModel
@{
    ViewBag.Title = Model.Title;
}

<style>
    h1, h2, h3 {
        color: #607d8b !important;
    }

    p {
        color: rgb(96, 125, 139);
        font-size: 1.2rem;
        font-weight: 300;
    }
    
    .row {
        padding-top: 2em;
    }
</style>
<div class="row">
    <div class="col s12 m8 offset-m2">
        <h3 class="center blue-grey-text">
            <b>@Model.Title</b>
        </h3>
    </div>

    <div class="col s12 m12">
        <div class="center">
            <img src="@Model.ImageUrl" alt="" class="responsive-img" />
        </div>
        <p class="light blue-grey-text flow-text">
            @Html.Raw(Model.Body)
        </p>
    </div>
    <div class="col s12 m6">
        <div class="blue-grey-text chip">
            @Model.Tags
        </div>
    </div>
    <div class="col s12 m6">
        <div class="blue-text">
            @Model.Date.ToLongDateString()
        </div>
    </div>
</div>